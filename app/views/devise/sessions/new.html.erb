  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <%= image_tag "logo.png", alt: "Log In" %>
        </div>
        <div class="modal-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <i class="fa fa-user"></i>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "UsuÃ¡rio" %>
          </div>

          <div class="form-group">
            <i class="fa fa-lock"></i>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Senha"  %>
          </div>

          <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "LOGIN", class: "btn btn-primary form-control" %>
          </div>
          <% end %>

          <div class="render">
            <%= render "devise/shared/links" %>
            </div>
        </div>
      </div>
      
    </div>
  </div>




